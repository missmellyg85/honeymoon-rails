<div class="row">
  <div id="promo-carousel" class="carousel slide" data-ride="carousel" data-interval="5000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% slideCounter = 0 %>
      <% @promos.each do |promo| %>
          <li data-target="#promo-carousel" data-slide-to="<%= slideCounter %>"
              class="<%= slideCounter == 0 ? 'active' : '' %>"></li>
          <% slideCounter += 1 %>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <% slideCounter = 0 %>
      <% @promos.each do |promo| %>

          <div class="item <%= slideCounter == 0 ? 'active' : '' %>">
            
            <div class="carousel-caption">
              <%= promo.description %>
            </div>
          </div>
          <% slideCounter += 1 %>
      <% end %>
    </div>
  </div>
  <script>
            $("#promo-carousel").carousel();
        </script>
</div>