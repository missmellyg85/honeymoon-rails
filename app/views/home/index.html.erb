<div id="main-image">
  <div class="tags">
    <div class="tagline pull-left">
      Paradise is calling
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row push-down">
    <div class="col-md-6 col-md-offset-3 text-center">
      <div class="lead">We are here to help you plan your perfect honeymoon!</div>
      <div class="taglink">
        <%= link_to("Explore destinations today", destinations_path) %></div>
    </div>
  </div>

    <%= render 'home/promo_carousel' %>

  <div class="row" id="windows">
    <div class="col-md-4 col-sm-4 pane">
