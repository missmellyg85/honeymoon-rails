<div id="main-image" class="row">
    <div class="tags">
      <div class="tagline pull-left">
        Paradise is calling
      </div>
    </div>
</div>

<div class="row push-down">
  <div class="col-md-6 col-md-offset-3 text-center">
    <div class="lead">We are here to help you plan your perfect honeymoon!</div>
    <div class="taglink"><a href="#">Explore destinations today</a></div>
  </div>
</div>
<div class="row push-down" id="windows">
  <div class="col-md-4">
    <div class="pane left">
        <h2>Destinations</h2>
        <%= image_tag("destinations.jpg", :class=>"img-thumbnail") %>
        <p>Explore what we have to offer and more!</p>
    </div>
  </div>
  <div class="col-md-4">
    <div class="pane center">
        <h2>Promotions</h2>
        <%= image_tag("promos.jpg", :class=>"img-thumbnail") %>
        <p>Check out current offers and promotions</p>
      </div>
  </div>
  <div class="col-md-4">
    <div class="pane right">
        <h2>Book Today</h2>
        <%= image_tag("book_today.jpg", :class=>"img-thumbnail") %>
        <p>Let us help book your perfect honeymoon!</p>
      </div>
  </div>
</div>