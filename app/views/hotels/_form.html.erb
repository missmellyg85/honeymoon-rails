<%= form_for @hotel, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :island_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:island_id, options_from_collection_for_select(@islands, 'id', 'name', @hotel.island_id), {include_blank: 'None'}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :destination_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:destination_id, options_from_collection_for_select(@destinations, 'id', 'name', @hotel.island_id), {include_blank: 'None'}) %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
                hotels_path, :class => 'btn' %>
  </div>
<% end %>
