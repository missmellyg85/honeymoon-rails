<div class="control-group">
  <%= f.label :name, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, :maxlength => '255', :size=>'25', :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :description, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_area :description, :maxlength => '2000', :size=>'150', :class => 'text_area' %>
  </div>
  <p><%= f.link_to_remove "Remove this hotel" %></p>
</div>