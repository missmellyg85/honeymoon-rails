<div class="row">
	<div class="form-group col-sm-6">
	  <%= f.label :name, :class => 'control-label' %>
	  <div class="controls">
	    <%= f.text_field :name, :maxlength => '255', :size=>'25', :class => 'text_field form-control' %>
	  </div>
	</div>
	<div class="form-group col-sm-6">
	  <%= f.label :description, :class => 'control-label' %>
	  <div class="controls">
	    <%= f.text_area :description, :maxlength => '2000', :size=>'150', :class => 'text_area form-control' %>
	  </div>

	  <p><%= f.link_to_remove "Remove this hotel", :class => "pull-right" %></p>
	</div>
</div>